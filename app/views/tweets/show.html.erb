Recent tweets in <%= @user_name %>'s (<%= @twitter_username %>) timeline:
<br><br>
<img src="<%= @twitter_avatar_url %>" width="50">
<br><br>
<ol>  
  <% @text_array.each do |tweet_text| %>
    <li><%= tweet_text %></li>
  <% end %>
</ol>

<%= form_tag("/", method: "get") do %>
  <%= label_tag(:twitter_username, "Search for:") %>
  <%= text_field_tag(:twitter_username) %>
  <%= submit_tag("Search") %>
<% end %>
